<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="◆危险性类别"
                android:textColor="@color/color2"
                android:textSize="@dimen/text_size_2" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_risk_categories"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"

                android:text="2.1类 易燃气体"
                android:textColor="@color/textColor_green"
                android:textSize="@dimen/text_size_2"
                android:typeface="sans" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"

            android:orientation="horizontal">


            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:text="◆燃烧及爆炸危险性"
                android:textColor="@color/color2"
                android:textSize="@dimen/text_size_2" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_danger"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.6"
                android:text="极易燃，与空气混合能形成爆炸性混合物，遇明火、高热或与氧化剂接触，又引起燃烧爆炸的危险。\n高温或接触氧化剂能引起燃烧或爆炸性聚合。"
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size_1"
                android:typeface="sans" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/color1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"

            android:orientation="horizontal">


            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:text="◆健康危害"
                android:textColor="@color/color2"
                android:textSize="@dimen/text_size_1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_health_hazard"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.6"
                android:text="急性毒性：小鼠吸入LC50  95ppm（2h）\n具有较强的麻醉作用\n吸入高浓度时可迅速引起意识丧失。吸入新鲜空气后，一般很快清醒\n皮肤接触液态乙烯可发生冻伤"
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size_1"
                android:typeface="sans" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/color1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"

            android:orientation="horizontal">


            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:text="◆环境影响"
                android:textColor="@color/color2"
                android:textSize="@dimen/text_size_2" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_environmental"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_weight="1"

                android:lineSpacingMultiplier="1.6"
                android:text="在土壤中具有很强的迁移性。\n可被生物降解"
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size_1"

                android:typeface="sans" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/color1" />
    </LinearLayout>
</ScrollView>