<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="24dip"
            android:layout_weight="2"

            android:gravity="center"
            android:text="化学品名称："
            android:textColor="@color/textColor_green"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/color1" />

        <TextView
            android:id="@+id/tv_cnname"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="24dip"
            android:layout_weight="3"
            android:gravity="center"
            android:text="乙烯"
            android:textColor="@color/textColor_black"
            android:textSize="@dimen/text_size_1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="2"
            android:gravity="center"
            android:text="英 文 名："
            android:textColor="@color/textColor_green"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/color1" />

        <TextView
            android:id="@+id/tv_enname"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Ethylene"
            android:textColor="@color/textColor_black"
            android:textSize="@dimen/text_size_1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="2"
            android:gravity="center"
            android:text="别名/商用名："
            android:textColor="@color/textColor_green"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/color1" />

        <TextView
            android:id="@+id/tv_byname"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="3"
            android:gravity="center"
            android:text="乙烯"
            android:textColor="@color/textColor_black"
            android:textSize="@dimen/text_size_1" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="2"
            android:gravity="center"
            android:text="U N 号："
            android:textColor="@color/textColor_green"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/color1" />

        <TextView
            android:id="@+id/tv_un"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="3"
            android:gravity="center"
            android:text="1038"
            android:textColor="@color/textColor_black"
            android:textSize="@dimen/text_size_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="2"
            android:gravity="center"
            android:text="C A S 号："
            android:textColor="@color/textColor_green"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/color1" />

        <TextView
            android:id="@+id/tv_cas"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="3"
            android:gravity="center"
            android:text="74-85-1"
            android:textColor="@color/textColor_black"
            android:textSize="@dimen/text_size_1" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"

        android:orientation="horizontal">


        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="2"
            android:gravity="center"
            android:text="危险货物编号："
            android:textColor="@color/textColor_green"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/color1" />

        <TextView
            android:id="@+id/tv_dg_code"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="3"
            android:gravity="center"
            android:text="21017"
            android:textColor="@color/textColor_black"
            android:textSize="@dimen/text_size_1" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/color1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"

        android:orientation="horizontal">


        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:text="◆GHS危害标签"
            android:textColor="@color/color2"

            android:textSize="@dimen/text_size_2" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_chs"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.6"
            android:text="易燃气体：分类1\n化学不稳定性气体：分类A\n高压气体：压缩气体"
            android:textColor="@color/textColor_black"
            android:textSize="@dimen/text_size_1"
            android:typeface="sans" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/color1" />
</LinearLayout>